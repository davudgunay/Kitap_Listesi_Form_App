@model List<KitapListesiProje.KitapListesi>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Kitaplar</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Kitap Adı</th>
            <th>Yazar</th>
            <th>Fiyat</th>
            <th>Tarih</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.KitapAdi</td>
                <td>@item.Yazar</td>
                <td>@item.Fiyat</td>
                <td>@Convert.ToDateTime(item.Tarih).ToShortDateString()</td>
            </tr>
        }
    </table>
</div>

